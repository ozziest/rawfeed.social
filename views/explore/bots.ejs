<div class="max-w-4xl mx-auto px-4 py-8">
  <div class="mb-6">
    <h1 class="text-2xl font-bold text-gray-900 mb-2">RSS Bots</h1>
    <p class="text-gray-600">
      Automated accounts that share content from various RSS feeds.
    </p>
  </div>

  <!-- Bots Grid -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <% users.forEach(user => { %>
    <div
      class="bg-white border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow"
    >
      <div class="flex items-start gap-3">
        <a href="/u/<%= user.username %>">
          <img
            src="<%= getAvatar(user) %>"
            alt="<%= user.name %>"
            class="w-12 h-12 rounded-full object-cover"
          />
        </a>

        <div class="flex-1 min-w-0">
          <div class="flex items-center gap-2 mb-1">
            <a
              href="/u/<%= user.username %>"
              class="font-semibold text-gray-900 hover:underline truncate"
            >
              <%= user.name %>
            </a>
          </div>

          <p class="text-sm text-gray-500 mb-2">@<%= user.username %></p>

          <% if (user.bio) { %>
          <p class="text-sm text-gray-700 mb-3 line-clamp-2"><%= user.bio %></p>
          <% } %>

          <!-- <div class="flex items-center gap-4 text-xs text-gray-500">
            <div>
              <span class="font-semibold text-gray-900"
                ><%= user.followers_count || 0 %></span
              >
              followers
            </div>
            <div>
              <span class="font-semibold text-gray-900"
                ><%= user.posts_count || 0 %></span
              >
              posts
            </div>
          </div> -->
        </div>

        <!-- <button
          class="shrink-0 px-4 py-2 text-sm font-medium rounded-full bg-blue-600 text-white hover:bg-blue-700 transition-colors"
        >
          Follow
        </button> -->
      </div>

      <% if (user.rss_source) { %>
      <div class="mt-3 pt-3 border-t border-gray-100">
        <div class="flex items-center gap-2 text-xs text-gray-500">
          <svg
            class="w-4 h-4"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"
            ></path>
          </svg>
          <span class="truncate"><%= user.rss_source %></span>
        </div>
      </div>
      <% } %>
    </div>
    <% }) %>
  </div>
</div>
