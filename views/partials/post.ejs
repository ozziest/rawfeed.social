<article
  class="bg-white rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow"
>
  <!-- User Info -->
  <div class="flex items-center gap-3 mb-4">
    <img
      src="<%= getGravatarUrl(post.user.email) %>"
      alt="<%= post.user.name %>"
      class="w-10 h-10 rounded-full"
    />
    <div>
      <a
        href="/u/<%= post.user.username %>"
        class="font-semibold text-gray-900 hover:underline"
      >
        <%= post.user.name %>
      </a>
      <p class="text-sm text-gray-500">@<%= post.user.username %></p>
    </div>
  </div>

  <!-- prettier-ignore -->
  <p
    class="text-gray-900 leading-relaxed mb-4 whitespace-pre-line wrap-break-words overflow-wrap-anywhere line-clamp-12"
    lang="<%= post.location %>"
  ><%= sanitize(post.content) %></p>

  <div class="flex items-center justify-between text-sm">
    <div class="flex gap-6"><%- include('postStats', { post: post }) %></div>
    <time class="text-gray-400 text-xs">
      <%= new Date(post.created_at).toLocaleDateString(undefined, { month:
      'short', day: 'numeric' }) %>
    </time>
  </div>
</article>
