<div class="bg-white rounded-lg p-6 mb-6 shadow-sm">
  <div class="flex items-start gap-4">
    <img
      src="<%= getAvatar(profileUser || domainUser) %>"
      class="w-20 h-20 rounded-full border-2 border-blue-100"
    />
    <div class="flex-1 min-w-0">
      <div class="flex items-start justify-between gap-4 mb-2">
        <div class="flex items-center gap-2 flex-wrap">
          <h1 class="text-2xl font-bold text-gray-900">
            <%= profileUser?.name || domainUser?.name %>
          </h1>
          <% if ((profileUser || domainUser)?.bot_type) { %>
          <span
            class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800"
          >
            ü§ñ Bot
          </span>
          <% } %>
        </div>
        <div class="flex gap-2">
          <% if (!(profileUser || domainUser)?.bot_type) { %>
          <a
            href="/u/<%= profileUser?.username || domainUser?.username %>/rss"
            class="flex items-center gap-2 px-3 py-1.5 text-sm font-medium text-orange-600 bg-orange-50 hover:bg-orange-100 rounded-lg transition-colors"
            title="RSS Feed"
            target="_blank"
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M6.18 15.64a2.18 2.18 0 0 1 2.18 2.18C8.36 19 7.38 20 6.18 20C5 20 4 19 4 17.82a2.18 2.18 0 0 1 2.18-2.18M4 4.44A15.56 15.56 0 0 1 19.56 20h-2.83A12.73 12.73 0 0 0 4 7.27V4.44m0 5.66a9.9 9.9 0 0 1 9.9 9.9h-2.83A7.07 7.07 0 0 0 4 12.93V10.1z"
              />
            </svg>
            <span>RSS</span>
          </a>
          <% } %>
        </div>
      </div>
      <p class="text-gray-600 leading-relaxed mb-3">
        <%= profileUser?.bio || domainUser?.bio %>
      </p>
      <!-- <div class="flex gap-4 text-sm text-gray-500">
        <span><strong class="text-gray-900">247</strong> g√∂nderi</span>
        <span><strong class="text-gray-900">1.2K</strong> takip√ßi</span>
        <span><strong class="text-gray-900">342</strong> takip</span>
      </div> -->
    </div>
  </div>
</div>

