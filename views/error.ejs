<!-- views/error.ejs -->
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title><%= statusCode %> - Error | RawFeed</title>
    <link rel="stylesheet" href="/public/css/tailwind.css" />
  </head>
  <body class="bg-gray-100 text-gray-900">
    <div class="min-h-screen flex items-center justify-center px-4">
      <div class="max-w-lg w-full text-center">
        <div class="bg-white rounded-lg shadow-lg p-8">
          <h1 class="text-6xl font-bold text-gray-900 mb-4">
            <%= statusCode %>
          </h1>
          <h2 class="text-2xl font-semibold text-gray-900 mb-2">Error</h2>
          <p class="text-gray-600 mb-8"><%= message %></p>

          <a
            href="/"
            class="inline-block px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium"
          >
            Go Home
          </a>
        </div>
      </div>
    </div>
  </body>
</html>
